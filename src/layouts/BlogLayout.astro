---
import BaseLayout from "./BaseLayout.astro";
import { formatDate } from "../utils/formatDate";
import { readingTime } from "../utils/readingTime";
import Tag from "../components/Tag.astro";
import TableOfContents from "../components/TableOfContents.astro";
import NewsletterSignup from "../components/NewsletterSignup.astro";

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: Date;
    tags?: string[];
  };
  body: string;
  headings?: Heading[];
  slug: string;
}

const { frontmatter, body, headings = [], slug } = Astro.props;
const ogImage = `/og/blog/${slug}.png`;
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  type="article"
  image={ogImage}
  showScrollProgress={true}
>
  <div class="max-w-6xl mx-auto px-4 py-16 overflow-x-clip lg:grid lg:grid-cols-[1fr_220px] lg:gap-12">
    <article class="min-w-0">
    <header class="mb-12">
      <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
        <time datetime={frontmatter.date.toISOString()}>
          {formatDate(frontmatter.date)}
        </time>
        <span>&middot;</span>
        <span>{readingTime(body)} min read</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4 break-words [overflow-wrap:anywhere]">
        {frontmatter.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-6 break-words [overflow-wrap:anywhere]">{frontmatter.description}</p>
      {
        frontmatter.tags && (
          <div class="flex flex-wrap gap-2">
            {frontmatter.tags.map((tag) => (
              <Tag name={tag} />
            ))}
          </div>
        )
      }
    </header>
    <div
      class="prose prose-lg prose-gray dark:prose-invert max-w-none prose-headings:font-semibold prose-a:text-primary-600 dark:prose-a:text-primary-400 hover:prose-a:text-primary-700 prose-code:text-primary-700 dark:prose-code:text-primary-300 prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none prose-pre:bg-gray-900"
    >
      <slot />
    </div>
    <NewsletterSignup />
    </article>
    <TableOfContents headings={headings} />
  </div>
</BaseLayout>
